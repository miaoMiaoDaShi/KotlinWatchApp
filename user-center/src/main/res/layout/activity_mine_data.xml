<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/allActivityColor"
    android:orientation="vertical">
    <include layout="@layout/tool_bar" />

    <RelativeLayout
        android:id="@+id/rlModifyPortrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:background="@android:color/white"
        android:paddingBottom="10px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="10px">

        <ImageView
            android:id="@+id/ivPortrait"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvModifyPortrait"
            android:padding="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_toStartOf="@+id/ivEnterPortraitiv"
            android:text="@string/modify_head_portrait"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ivEnterPortraitiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="15px"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_line" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray50"/>
    <RelativeLayout
        android:id="@+id/rlNickName"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white"
        android:paddingBottom="10px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="10px">

        <TextView
            android:id="@+id/tvNickNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:text="@string/nickname"
            android:textColor="@color/itemTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvNickName"
            android:padding="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_toStartOf="@+id/EnterNickName"
            android:text="小梦梦"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/EnterNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_line" />
    </RelativeLayout>
</LinearLayout>