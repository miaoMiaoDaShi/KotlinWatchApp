<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="560px"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="26px"
                android:text="提示"
                android:textColor="@color/itemTextColor"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/please_relation_name_len"
                android:textColor="@color/itemTextColor"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/txtName"
                android:layout_width="360px"
                android:layout_height="80px"
                android:layout_marginBottom="26px"
                android:layout_marginTop="26px"
                android:background="@drawable/shape_bg_gray_contour"
                android:ems="8"
                android:textSize="15sp"
                android:textColor="@color/itemTextColor"
                android:inputType="text"
                android:paddingLeft="26px"
                android:paddingRight="26px"/>

            <include layout="@layout/include_confirm_cancel"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>