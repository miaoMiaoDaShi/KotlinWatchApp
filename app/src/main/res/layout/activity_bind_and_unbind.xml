<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/allActivityColor"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/tool_bar"/>

    <android.support.v7.widget.CardView
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="126px"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ivOrcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:text="@string/watch_orcode"
        android:textColor="@color/gray"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bind_num"
            android:textColor="@color/gray"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvBindCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfsdfasdf"
            android:textColor="@color/itemTextColor"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCommit"
        android:layout_width="376px"
        android:layout_height="80px"
        android:layout_marginTop="196px"
        android:background="@drawable/select_btn_confirm"
        android:text="@string/do_unbind"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>
</LinearLayout>