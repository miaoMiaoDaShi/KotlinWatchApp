<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/allActivityColor"
              android:orientation="vertical">

    <include layout="@layout/tool_bar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_head_fun_b"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:text="上学守护"
            android:textColor="@color/itemTextColor"
            android:textSize="15sp"/>

        <Switch
            android:id="@+id/switchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:switchPadding="26px"
            android:text="已打开"
            android:textColor="@color/gray"
            android:textSize="15sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlGoToSchoolTime"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="26px"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26px"
                        android:text="上学时间"
                        android:textColor="@color/itemTextColor"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvGoToSchoolTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26px"
                        android:layout_marginTop="15px"
                        android:text="早上 08:88-11: 30 下午 14: 00-16:30"
                        android:textColor="@color/gray"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="26px"
                    android:src="@drawable/ic_right_line"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26px"
                android:background="@drawable/shape_bg_gray_contour"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlSchoolAddrs"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26px"
                            android:text="学校地址"
                            android:textColor="@color/itemTextColor"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvSchoolAddrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26px"
                            android:layout_marginTop="15px"
                            android:text="小学生的撒啊第三方"
                            android:textColor="@color/gray"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="26px"
                        android:src="@drawable/ic_right_line"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="26px"
                    android:layout_marginRight="26px"
                    android:background="@color/gray50"/>

                <RelativeLayout
                    android:id="@+id/rlHomeAddrs"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26px"
                            android:text="家小区地址"
                            android:textColor="@color/itemTextColor"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvHomeAddrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26px"
                            android:layout_marginTop="15px"
                            android:text="请设置地址"
                            android:textColor="@color/gray"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="26px"
                        android:src="@drawable/ic_right_line"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlWifi"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="26px"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26px"
                        android:text="家里WIFI"
                        android:textColor="@color/itemTextColor"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvWifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26px"
                        android:layout_marginTop="15px"
                        android:text="请设置WIFI"
                        android:textColor="@color/gray"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="26px"
                    android:src="@drawable/ic_right_line"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>